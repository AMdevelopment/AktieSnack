<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_threads"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <include
            android:id="@+id/toolbar_threads"
            layout="@layout/toolbar_threads" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_thread_latest_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latest updated threads"
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#d6d6d6"
                android:textSize="25dp"
                android:layout_centerInParent="true" />

            <ListView
                android:id="@+id/main_thread_top_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_thread_all_thread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="All threads"
                android:textColor="#000000"
                android:background="#d6d6d6"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal" />

            <ListView
                android:id="@+id/main_thread_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#dadada"
        android:choiceMode="singleChoice"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/user_slide_pic"
            android:layout_width="103dp"
            android:layout_height="138dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/client2" />

        <TextView
            android:id="@+id/user_slide_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Username"
            android:textSize="30sp"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/user_slide_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstName"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_slide_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastName"
                android:layout_alignRight="@id/user_slide_firstname"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textAlignment="center"
            android:id="@+id/user_slide_button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>